<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserActivity"
    android:theme="@style/ToolbarTheme">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_dark2"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/user_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:text="Сергей Владимирович"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"/>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar"
        android:layout_above="@id/user_bnv"
        android:background="@color/gray_dark1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/user_bnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_dark2"
        app:itemIconTint="@color/user_activity_btv_color"
        app:itemTextColor="@color/user_activity_btv_color"
        app:menu="@menu/user_activity_bottom_nav_menu"/>

</RelativeLayout>