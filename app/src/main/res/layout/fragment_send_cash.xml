<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dark1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="6dp">

        <TextView
            android:id="@+id/source_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Карта отправителя"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/source_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1234****4321"
            android:textSize="12sp"
            android:layout_below="@id/source_name_tv"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/source_rubs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text=" рублей"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/source_cash_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/source_rubs_tv"
            android:layout_centerVertical="true"
            tools:text="22000"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="6dp">

        <TextView
            android:id="@+id/dist_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Карта получателя"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/dist_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1234****4321"
            android:textSize="12sp"
            android:layout_below="@id/dist_name_tv"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/dist_rubs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text=" рублей"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/dist_cash_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/dist_rubs_tv"
            android:layout_centerVertical="true"
            tools:text="22000"
            android:textSize="12sp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/enter_sum_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введите сумму"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="64dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="44dp"
        android:textColorHint="@color/black"
        android:background="@color/white"/>

    <Button
        android:id="@+id/send_cash_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Оплатить"
        android:textAllCaps="false"
        android:backgroundTint="@color/purple_300"/>

</LinearLayout>